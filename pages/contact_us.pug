doctype html
include ./contact/mixin_contact.pug
head
    include abstracts/meta
body.container
    include components/navigation
section.path
    .box
        .path__content
            ul
                li
                    a(href='#') Home
                    i.fas.fa-angle-right
                li
                    a(href='#') Liên hệ
section
    .box
        .contact
            .contact__title
                h1 liên hệ
            .contact__content
                .contact__content__img
                    img(src='./assets/images/map.jpg')
                .contact__content__form
                    form(action="")
                        .contact__content__form__title
                            h3 gửi mail cho chúng tôi
                        .contact__content__form__group
                            +form-group('Tên *', 'text')
                            +form-group('Email *', 'email')
                            .form-group
                                label Tin nhắn *
                                textarea(rows="11")
                            .contact__content__form__group__btn
                                a(href="#") gửi
footer.footer
    include layouts/footer