doctype html
include ./home/mixin_home.pug
include ./list/mixin_list.pug
head
    include abstracts/meta
body.container
    include components/navigation
    section.path.grid__path
        .box
            .path__content
                ul
                    li
                        a(href='#') Home
                        i.fas.fa-angle-right
                    li
                        a(href='#') Trang sức
    section.advertisement
        .box
            .content
                h1 Giảm giá 50%
                .content__time
                    h4 trong vòng 3 ngày
                    p ( 25/5 - 28/5/2015 )
    section.grid
        .box
            .product__list
                aside
                    .categories
                        .categories__content
                            .title.border-solid
                                i.fas.fa-bars
                                h1 DANH MỤC SẢN PHẨM
                            .cosmetics.border-dotted
                                h2
                                a(onclick='showProducts(`http://localhost:3000/product`)')(href='#') MỸ PHẨM
                                i.fas.fa-caret-right
                            .jewelry.border-dotted
                                .jewelry__title
                                    h2
                                    | TRANG SỨC
                                    i.fas.fa-caret-down
                                ul.product__category
                                    li.show__chanel
                                        a(onclick='showProducts(`http://localhost:3000/bracelet`)')(href='#') Vòng tay
                                    li.show__ring
                                        a(onclick='showProducts(`http://localhost:3000/ring`)')(href='#') Nhẫn
                                    li.show__ankle__bracelet
                                        a(onclick='showProducts(`http://localhost:3000/legbracelet`)')(href='#') Lắc chân
                                    li.show__other
                                        a(onclick='showProducts(`http://localhost:3000/other`)')(href='#') Phụ kiện khác
                                    li.show__shoe
                                        a(onclick='showProducts(`http://localhost:3000/shoes`)')(href='#') Giày lưới - giày mọi
                            .accessories.border-dotted
                                h2
                                    | PHỤ KIỆN
                                i.fas.fa-caret-right
                            .perfume.border-dotted
                                h2
                                    | NƯỚC HOA
                                i.fas.fa-caret-right
                        .categories__comparison
                            h1.title.border-solid so sánh sản phẩm
                            p   Bạn chưa có sản phẩm nào để so sánh
                        .categories__tag
                            h1.title.border-solid tag sản phẩm
                            .categories__tag__btn
                                each val in ['Hoa tai', 'Son', 'Nước hoa', 'Giày', 'Sandal','Áo sơ mi', 'Nước hoa','Trẻ em', 'Thời trang nữ']
                                    button(type='button')=val
                            .categories__img
                                img(src='./assets/images/mandala-store.jpg')
                article
                    .list__content
                        +listPagination
                        .grid__product
                        +listPagination
.notification__container
        .notification
            i.fas.fa-check-circle  Đã thêm một sản phẩm
footer.footer
    include layouts/footer
script(src="./grid.js")
script(src="./cart.js")